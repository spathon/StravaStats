{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",

  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },

  "javascript": {
    "jsxRuntime": "reactClassic",
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  }
}
